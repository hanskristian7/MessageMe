<h3 class="ui center aligned icon header medium">
    <i class=" blue circular american sign language interpreting icon"></i>
    Say Something
</h3>

<div class="ui two column grid">
    <div class="twelve wide column">
        <div class="ui card fluid raise chatbox">
            <div class="ui content">
                <div class="ui feed">
                    <h4 class="ui header">Messages</h4>
                    <%= render @messages %>
                </div>
            </div>
            <div class="extra content">
                <%= form_for(@message, html: {class: "ui reply form", role: "form"}, url: message_path) do |f| %>
                    <div class="field">
                        <div class="ui fluid icon input">
                            <%= f.text_field :body, placeholder: "Enter a message here..." %>
                            <%= f.button '<i class="bordered inverted blue icon edit"></i>'.html_safe %>
                        </div>
                    </div>
                <% end %>
            </div>
        </div>
    </div>
    
    <div class="four wide column">
        <div class="ui fluid raise card chatbox">
            <div class="ui content">
                <div class="ui inverted vertical pointing menu">
                    <a class="active item">
                      Home
                    </a>
                    <a class="item">
                      Messages
                    </a>
                    <a class="item">
                      Friends
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>